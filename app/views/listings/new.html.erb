<%= form_for(@listing) do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.label :starting_price, "Starting price(p)" %>
    <%= f.number_field :starting_price %>

    <%= f.label :rrp, "RRP(p)" %>
    <%= f.number_field :rrp %>

<!--     <%= f.label :start_date %>
    <%= f.datetime_select :start_date %> -->

    <%= f.label :time_per_bid, "Time per bid (s)" %>
    <%= f.number_field :time_per_bid %>

<!--     <%= f.label :default_end_date%>
    <%= f.datetime_select :default_end_date %> -->

    <%= f.submit "Submit" %>
    
<% end %>
