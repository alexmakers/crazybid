        
<div class="span8 offset2 listing-container">
    
    <div class="row-fluid">

        <div class="span8 listing-title">
        <h1><%=@listing.title%></h1>
        </div>

    </div>

    <div class="row-fluid">

        <div class="span5">
            <div class="listing-image">
                <%= image_tag("#{@listing.photo.url(:medium)}") %>
            </div>
        </div>


        <div class="span5 listing-details">
            <div id="listing-price-<%= @listing.id%>">
                Highest bid: --
            </div>
            <div id="listing-timer-<%= @listing.id%>">
                Ending in: --
            </div>
            <div id="listing-user-<%= @listing.id%>">
                Currently winning: --
            </div>
            <% if user_signed_in? %>
                <a id="bid-<%= params[:id] %>" href="#">Bid Now</a>
            <% else %>
                <a id="bid-button" href="/signin">Bid Now</a>
            <% end %>
            
        </div>

     </div>

     <div class="row-fluid">
        <div class="listing-description-block span8">
            <div class="listing-description">
                <p><%= @listing.description %></p>
            </div>
        </div>
    </div>
   

</div>

<%= render 'bid_js', listing: @listing %>











